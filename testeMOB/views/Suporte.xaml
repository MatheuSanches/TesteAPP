<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Suporte"
             x:Class="testeMOB.views.Suporte">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="solo5.png" Priority="1" Clicked="MenuItem_OnClicked"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Padding="20" Spacing="20" BackgroundColor="#000000">
            <Image Source="solo2.png" HeightRequest="70" VerticalOptions="Start"/>
            <Label Text="Use o nosso suporte forte e veloz que nem o Iron!!" TextColor="#81a2d4"/>
            <!--Colocar IsAnimationPlaying como true para o gif funcionare verificar se o gif está funcionando como imagem-->
            <!--<Image Source="cat.gif" IsAnimationPlaying="True" HeightRequest="70" VerticalOptions="Start"/>-->
            <Label Text="Mande uma mensagem relatando seu problema para nossa equipe,o suporte irá auxiliá-lo na hora!!" TextColor="#81a2d4" VerticalOptions="Start"/>
            <Label Text="Você pode mandar sugestões de alterações e também dar sua opinião sobre o funcionamento!!" TextColor="#81a2d4" VerticalOptions="Start"/>
            <Button Text="Entrar em Contato" TextColor="#000000" BackgroundColor="#81a2d4" Clicked="Send" VerticalOptions="Start"/>
        </StackLayout>
    </ScrollView>
</ContentPage>